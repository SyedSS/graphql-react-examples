{
  "name": "graphql-react-examples",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=8.5"
  },
  "browserslist": ">1%",
  "dependencies": {
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "cross-fetch": "^2.2.2",
    "dotenv-cli": "^1.4.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^14.0.2",
    "graphql-react": "^2.0.0",
    "next": "^7.0.0-canary.15",
    "react": "^16.5.0",
    "react-display-name": "^0.2.4",
    "react-dom": "^16.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.5.0",
    "eslint-config-env": "^1.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "now": "^11.4.1",
    "prettier": "^1.14.2"
  },
  "scripts": {
    "build": "dotenv next build",
    "start": "dotenv node server",
    "test": "npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint .",
    "test:prettier": "prettier '**/*.{json,yml,md}' -l",
    "precommit": "lint-staged",
    "deploy": "now"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-inline-environment-variables"
    ]
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{json,yml,md}": "prettier -l"
  },
  "eslintConfig": {
    "extends": [
      "env"
    ],
    "rules": {
      "require-jsdoc": "off",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  },
  "now": {
    "alias": "graphql-react",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "https://graphql-react.now.sh",
      "PORT": "80",
      "API_URL": "https://graphql-react.now.sh/graphql"
    }
  }
}
