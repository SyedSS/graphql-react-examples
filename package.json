{
  "name": "graphql-react-examples",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=8.5"
  },
  "browserslist": ">1%",
  "dependencies": {
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "cross-fetch": "^2.2.2",
    "dotenv-cli": "^1.4.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-react": "^1.0.1",
    "next": "^6.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.5",
    "eslint": "^5.1.0",
    "eslint-config-env": "^0.5.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "now": "^11.2.8",
    "prettier": "^1.13.7"
  },
  "scripts": {
    "build": "dotenv next build",
    "start": "dotenv node server",
    "test": "eslint . && prettier '**/*.{json,md}' -l",
    "precommit": "lint-staged",
    "deploy": "now"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-inline-environment-variables"
    ]
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{json,md}": "prettier -l"
  },
  "eslintConfig": {
    "extends": [
      "env"
    ],
    "rules": {
      "require-jsdoc": "off",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  },
  "now": {
    "alias": "graphql-react",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "https://graphql-react.now.sh",
      "PORT": "80",
      "API_URL": "https://graphql-react.now.sh/graphql"
    }
  }
}
